@model IEnumerable<AMST4_Carousel.MVC.Models.Category>

@{
    ViewData["Title"] = "Lista de Categoria";
}
<h1>Lista de Categorias</h1>

<p>
    <a class="btn btn-success" asp-action="AddCategory"><i class="fa fa-plus-circle"></i> Cadastrar</a>
</p>
<table id="myTable" class="table text-light">
    <thead>
        <tr>
            <th>
                Descrição
            </th>
            <th class="text-start">
               Url da Imagem
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr class="p-3">
            <td class="m-3 pt-5">
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td class="m-3 p-3 text-start">
                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                    {
                        <img src="@Url.Content("~/" + item.ImageUrl)" alt="@item.Description" style="width: 100px; height: 100px;" />
                    }
                    else
                    {
                        <span>Sem imagem</span>
                    }
            </td>

                <td class="m-3 pt-5">
                    <a class="btn btn-success me-1 pt-1 pb-1" asp-action="EditCategory" asp-route-id="@item.Id"><i class="fa fa-edit"></i></a>
                    <a class="btn btn-primary me-1 pt-1 pb-1" asp-action="DetailsCategory" asp-route-id="@item.Id"><i class="fa fa-search"></i></a>
                    <a class="btn btn-danger pt-1 pb-1" asp-action="DeleteCategory" asp-route-id="@item.Id"><i class="fa fa-trash"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>

@section Scripts {
    <script>

        var table = new DataTable('#myTable', {
            language: {
                url: '//cdn.datatables.net/plug-ins/2.0.7/i18n/pt-BR.json',
            },
        });
    </script>
    
}
