@model AMST4_Carousel.MVC.Models.Category

@{
    ViewData["Title"] = "Detalhes Categoria";
}

<h1>Detalhes da Categoria</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Descrição
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2 pt-4 mt-3">
            Url da Imagem
        </dt>
        <dd class = "col-sm-10">
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <img src="@Url.Content("~/" + Model.ImageUrl)" alt="@Model.Description" style="width: 100px; height: auto;" />
            }
            else
            {
                <span>Sem imagem</span>
            }
        </dd>
        <dt class = "col-sm-2">
            Está Ativo
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsActive)
        </dd>
        <dt class = "col-sm-2">
            Data de Criação
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreateDate)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-info text-light" asp-action="EditCategory" asp-route-id="@Model?.Id">Editar</a> <br/>
    <a class="btn btn-primary mt-3" asp-action="CategoryList">Voltar para a lista</a>
</div>
