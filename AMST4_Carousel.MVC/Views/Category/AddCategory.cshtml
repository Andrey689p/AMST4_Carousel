@model AMST4_Carousel.MVC.Models.Category

@{
    ViewData["Title"] = "Adicionar Categoria";
}

<h1>Cadastrar Categoria</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="AddCategory" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Descrição</label>
                <input asp-for="Description" class="form-control bg-dark text-light" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageUrl" class="control-label">Url da Imagem</label>
                <input type="file" name="image" class="form-control bg-dark text-light" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-success mt-3" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="CategoryList" class="mt-3 btn btn-primary">Voltar para a Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
