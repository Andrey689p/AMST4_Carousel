@model AMST4_Carousel.MVC.Models.Size

@{
    ViewData["Title"] = "Cadastrar tamanho";
}

<h1>Cadastrar Tamanho</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddSize">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Descrição</label>
                <input asp-for="Description" class="form-control text-light bg-dark" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-success mt-3" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-primary mt-3" asp-action="SizeList">Voltar para a Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
