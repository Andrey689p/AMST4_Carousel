@model AMST4_Carousel.MVC.Models.Size

@{
    ViewData["Title"] = "Excluir Tamanho";
}

<h1>Excluir Tamanho</h1>

<h3>Tem certza que deseja excluir isso?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Descrição
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            Está ativo
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsActive)
        </dd>
        <dt class = "col-sm-2">
            Data de Criação
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreateDate)
        </dd>
    </dl>
    
    <form asp-action="DeleteSize">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir" class="btn btn-danger" /><br />
        <a class="mt-3 btn btn-primary" asp-action="SizeList">Voltar para a Lista</a>
    </form>
</div>
