@model AMST4_Carousel.MVC.Models.Product

@{
    ViewData["Title"] = "Editar Produto";
}

<h1>Editar Produto</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditProduct" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label">Nome</label>
                <input asp-for="Name" class="form-control bg-dark text-light" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Brand" class="control-label">Marca</label>
                <input asp-for="Brand" class="form-control bg-dark text-light" />
                <span asp-validation-for="Brand" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Descrição</label>
                <input asp-for="Description" class="form-control bg-dark text-light" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageUrl" class="control-label">Url da Imagem</label>
                <input type="file" name="image" class="form-control bg-dark text-light" />
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label">Preço</label>
                <input asp-for="Price" class="form-control bg-dark text-light" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Stock" class="control-label">Estoque</label>
                <input asp-for="Stock" class="form-control bg-dark text-light" />
                <span asp-validation-for="Stock" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CategoryId" class="control-label">Categoria</label>
                <select asp-for="CategoryId" class="form-control bg-dark text-light" asp-items="@ViewBag.CategoryList"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-success mt-3" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ProductList" class="mt-3 btn btn-primary">Voltar para a Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
